<Window x:Class="UltimateMechanic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UltimateMechanic"
        xmlns:views="clr-namespace:UltimateMechanic.Views"
        xmlns:viewmodels="clr-namespace:UltimateMechanic.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Foreground="White">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewmodels:CleanerViewModel}">
            <views:CleanerView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:StartupViewModel}">
            <views:StartupView/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
            <StackPanel>
                <Border Background="#2D2D30" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Ultimate" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Mechanic" FontSize="24" FontWeight="Bold" Foreground="#4EC9B0" Margin="0,-5,0,0"/>
                        <TextBlock Text="System Maintenance Tool" FontSize="11" Foreground="#808080" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Button Command="{Binding NavigateToDashboardCommand}" 
                        Background="Transparent" Foreground="White" 
                        HorizontalContentAlignment="Left" Padding="20,15" 
                        BorderThickness="0" Cursor="Hand" Margin="0,0,0,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“Š" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Dashboard" FontSize="15" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2D2D30"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding CurrentPage}" Value="Dashboard">
                                    <Setter Property="Background" Value="#0E639C"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Command="{Binding NavigateToCleanerCommand}" 
                        Background="Transparent" Foreground="White" 
                        HorizontalContentAlignment="Left" Padding="20,15" 
                        BorderThickness="0" Cursor="Hand" Margin="0,0,0,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ§¹" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Cleaner" FontSize="15" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2D2D30"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding CurrentPage}" Value="Cleaner">
                                    <Setter Property="Background" Value="#0E639C"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Command="{Binding NavigateToStartupCommand}" 
                        Background="Transparent" Foreground="White" 
                        HorizontalContentAlignment="Left" Padding="20,15" 
                        BorderThickness="0" Cursor="Hand" Margin="0,0,0,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸš€" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Startup Apps" FontSize="15" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2D2D30"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding CurrentPage}" Value="Startup">
                                    <Setter Property="Background" Value="#0E639C"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Border VerticalAlignment="Bottom" Padding="20" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Version 1.1.0" FontSize="11" Foreground="#606060"/>
                        <TextBlock Text="Â© 2025 Ultimate Mechanic" FontSize="10" Foreground="#505050" Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#1E1E1E">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>
    </Grid>
</Window>
